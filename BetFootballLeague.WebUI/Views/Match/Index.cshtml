@{
    ViewData["Title"] = "Match Page";
}

@section Style {
    <script src="~/css/match.css" asp-append-version="true"></script>
}

<div>
    <h1>Matchs List</h1>
    <div class="row mb-3 mt-5">
        <div class="col-auto text-right">
            <button type="button" class="btn btn-success" onclick="showCreateModal()">
                <i class="bi bi-plus-lg"></i> Create New Match
            </button>
        </div>
    </div>
    <div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">Index</th>
                    <th scope="col">Date</th>
                    <th scope="col">Time</th>
                    <th scope="col">Team 1</th>
                    <th scope="col">Team 2</th>
                    <th scope="col">Status</th>
                    <th scope="col" class="text-center">Action</th>
                </tr>
            </thead>
            <tbody id="match-table-data">
                <tr>
                    <td colspan="6" class="text-center"></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<!-- Modal Create -->
<div class="modal fade" id="create-match-modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="createMatchModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createMatchModalLabel">Add match</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="index-order" class="form-label">No</label>
                    <input type="number" class="form-control" id="index-order" placeholder="" />
                </div>
                <div class="mb-3">
                    <label for="date" class="form-label">Date</label>
                    <input class="form-control datepicker" id="date" placeholder="" />
                </div>
                <div class="mb-3">
                    <label for="time" class="form-label">Time</label>
                    <input class="form-control timepicker" id="time" placeholder="" />
                </div>
                <div class="mb-3">
                    <label for="round" class="form-label">Round</label>
                    <select class="form-select" aria-label="Round" id="round">
                        <option>Select Round...</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="team1" class="form-label">Team 1</label>
                    <select class="form-select select2-team" aria-label="Team 1" id="team1" style="width: 100%">
                        <option></option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="team2" class="form-label">Team 2</label>
                    <select class="form-select select2-team" aria-label="Team 2" id="team2" style="width: 100%">
                        <option></option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="submitCreateMatch()">Save</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Edit -->
<div class="modal fade" id="edit-match-modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="editMatchModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <input type="hidden" id="update-match-id" value="" />
            <div class="modal-header">
                <h5 class="modal-title" id="editMatchModalLabel">Update match</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="index-order-edit" class="form-label">No</label>
                    <input type="number" class="form-control" id="index-order-edit" placeholder="" />
                </div>
                <div class="mb-3">
                    <label for="date" class="form-label">Date</label>
                    <input class="form-control datepicker" id="date-edit" placeholder="" />
                </div>
                <div class="mb-3">
                    <label for="time" class="form-label">Time</label>
                    <input class="form-control timepicker" id="time-edit" placeholder="" />
                </div>
                <div class="mb-3">
                    <label for="round" class="form-label">Round</label>
                    <select class="form-select" aria-label="Round" id="round-edit">
                        <option>Select Round...</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="team1" class="form-label">Team 1</label>
                    <select class="form-select select2-team" aria-label="Team 1" id="team1-edit" style="width: 100%">
                        <option></option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="team2" class="form-label">Team 2</label>
                    <select class="form-select select2-team" aria-label="Team 2" id="team2-edit" style="width: 100%">
                        <option></option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="submitUpdateMatch()">Update</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Delete -->
<div class="modal fade" id="delete-match-modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="deleteMatchModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <input type="hidden" id="delete-match-id" value="" />
            <div class="modal-header">
                <h5 class="modal-title" id="deleteMatchModalLabel">Delete match</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    Are you sure you want to delete this match?
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" onclick="submitDeleteMatch()">Delete</button>
            </div>
        </div>
    </div>
</div>

@Html.AntiForgeryToken()

@section Scripts {
    <script src="~/js/match.js" asp-append-version="true"></script>
}
